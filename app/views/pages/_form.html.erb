<% was_validated = page.errors.any? %>

<%= form_with(model: page, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% hero_image_class = "form-control" %>
    <% hero_image_was_invalid = page.errors.include?(:hero_image) %>

    <% if was_validated %>
      <% if hero_image_was_invalid %>
        <% hero_image_class << " is-invalid" %>
      <% else %>
        <% hero_image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :hero_image %>
    <%= f.file_field :hero_image, class: "form-control" %>
    <% if hero_image_was_invalid %>
      <% page.errors.full_messages_for(:hero_image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% page_name_class = "form-control" %>
    <% page_name_was_invalid = page.errors.include?(:page_name) %>

    <% if was_validated %>
      <% if page_name_was_invalid %>
        <% page_name_class << " is-invalid" %>
      <% else %>
        <% page_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :page_name %>
    <%= f.text_area :page_name, class: page_name_class, placeholder: "Enter page name" %>
    <% if page_name_was_invalid %>
      <% page.errors.full_messages_for(:page_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% page_content_class = "form-control" %>
    <% page_content_was_invalid = page.errors.include?(:page_content) %>

    <% if was_validated %>
      <% if page_content_was_invalid %>
        <% page_content_class << " is-invalid" %>
      <% else %>
        <% page_content_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :page_content %>
    <%= f.text_area :page_content, class: page_content_class, placeholder: "Enter page content" %>
    <% if page_content_was_invalid %>
      <% page.errors.full_messages_for(:page_content).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% comment_class = "form-control" %>
    <% comment_was_invalid = page.errors.include?(:comment) %>

    <% if was_validated %>
      <% if comment_was_invalid %>
        <% comment_class << " is-invalid" %>
      <% else %>
        <% comment_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :comment %>
    <%= f.text_field :comment, class: comment_class, placeholder: "Enter comment" %>
    <% if comment_was_invalid %>
      <% page.errors.full_messages_for(:comment).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
