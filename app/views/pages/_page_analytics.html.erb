<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Analytics

    <a data-toggle="collapse" href="#page_analytics_new_form">
      Add analytic
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @page.analytics.each do |analytic| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to analytic, analytic %>

        <%= link_to analytic, method: :delete, data: { confirm: "Do you really want to delete this analytic" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="page_analytics_new_form">
        <%= render partial: "pages/page_analytics_new_form" %>
      </div>
    </div>

  </ul>
</div>
