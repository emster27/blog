        <% dob_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dob %>
    <!-- Input for dob start -->
    <%= f.text_field :dob, class: dob_class, placeholder: "Enter dob" %>
    <!-- Input for dob end -->
    <% if dob_was_invalid %>
      <% profile.errors.full_messages_for(:dob).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for dob end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
