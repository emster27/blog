<% was_validated = profile.errors.any? %>

<%= form_with(model: profile, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% email_class = "form-control" %>
    <% email_was_invalid = profile.errors.include?(:email) %>

    <% if was_validated %>
      <% if email_was_invalid %>
        <% email_class << " is-invalid" %>
      <% else %>
        <% email_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :email %>
    <%= f.text_field :email, class: email_class, placeholder: "Enter email" %>
    <% if email_was_invalid %>
      <% profile.errors.full_messages_for(:email).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% password_class = "form-control" %>
    <% password_was_invalid = profile.errors.include?(:password) %>

    <% if was_validated %>
      <% if password_was_invalid %>
        <% password_class << " is-invalid" %>
      <% else %>
        <% password_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :password %>
    <%= f.text_field :password, class: password_class, placeholder: "Enter password" %>
    <% if password_was_invalid %>
      <% profile.errors.full_messages_for(:password).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% account_type_class = "form-control" %>
    <% account_type_was_invalid = profile.errors.include?(:account_type) %>

    <% if was_validated %>
      <% if account_type_was_invalid %>
        <% account_type_class << " is-invalid" %>
      <% else %>
        <% account_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :account_type %>
    <%= f.text_field :account_type, class: account_type_class, placeholder: "Enter account type" %>
    <% if account_type_was_invalid %>
      <% profile.errors.full_messages_for(:account_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% dob_class = "form-control" %>
    <% dob_was_invalid = profile.errors.include?(:dob) %>

    <% if was_validated %>
      <% if dob_was_invalid %>
        <% dob_class << " is-invalid" %>
      <% else %>
        <% dob_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dob %>
    <%= f.text_field :dob, class: dob_class, placeholder: "Enter dob" %>
    <% if dob_was_invalid %>
      <% profile.errors.full_messages_for(:dob).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
