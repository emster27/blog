<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Pages

    <a data-toggle="collapse" href="#profile_pages_new_form">
      Add page
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @profile.pages.each do |page| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to page, page %>

        <%= link_to page, method: :delete, data: { confirm: "Do you really want to delete this page" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="profile_pages_new_form">
        <%= render partial: "profiles/profile_pages_new_form" %>
      </div>
    </div>

  </ul>
</div>
