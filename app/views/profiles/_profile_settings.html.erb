<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Settings

    <a data-toggle="collapse" href="#profile_settings_new_form">
      Add setting
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @profile.settings.each do |setting| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to setting, setting %>

        <%= link_to setting, method: :delete, data: { confirm: "Do you really want to delete this setting" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="profile_settings_new_form">
        <%= render partial: "profiles/profile_settings_new_form" %>
      </div>
    </div>

  </ul>
</div>
