<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Social Links

    <a data-toggle="collapse" href="#profile_social_links_new_form">
      Add social link
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @profile.social_links.each do |social_link| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to social_link, social_link %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to social_link, method: :delete, data: { confirm: "Do you really want to delete this social_link" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="profile_social_links_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
